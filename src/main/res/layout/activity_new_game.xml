<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96cce6"
    tools:context="com.example.aspire.namegame.NewGameActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/AddMemberButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="139dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="?android:attr/colorPressedHighlight"
        android:text="Add Member"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@+id/StartGameButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopicSpinner" />

    <Button
        android:id="@+id/StartGameButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="139dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="?android:attr/colorActivatedHighlight"
        android:text="Start Game"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddMemberButton" />

    <Spinner
        android:id="@+id/ModeSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="34dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="106dp"
        android:layout_height="0dp"
        android:layout_marginBottom="121dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:text="Mode"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/ModeSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="103dp"
        android:layout_height="0dp"
        android:layout_marginBottom="33dp"
        android:layout_marginStart="32dp"
        android:text="Difficulty"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/LetterSpinner"
        app:layout_constraintEnd_toStartOf="@+id/DifficultySpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ModeSpinner" />

    <Spinner
        android:id="@+id/DifficultySpinner"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="33dp"
        app:layout_constraintBottom_toTopOf="@+id/LetterSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/ModeSpinner" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="31dp"
        android:text="Letter"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Topic"
        app:layout_constraintEnd_toStartOf="@+id/LetterSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/LetterSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintBottom_toTopOf="@+id/TopicSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Spinner
        android:id="@+id/TopicSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toTopOf="@+id/AddMemberButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Topic"
        app:layout_constraintTop_toBottomOf="@+id/LetterSpinner" />

    <TextView
        android:id="@+id/Topic"
        android:layout_width="97dp"
        android:layout_height="0dp"
        android:layout_marginBottom="142dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="32dp"
        android:text="Topics"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/TopicSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</android.support.constraint.ConstraintLayout>


